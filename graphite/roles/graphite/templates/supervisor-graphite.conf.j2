[program:gunicorn-graphite]
command=/opt/graphite/bin/gunicorn_django --workers=24 -t 600 -u {{ nginx_user }} -g {{ nginx_user }} -b 127.0.0.1:8080 --log-file=/opt/graphite/storage/log/webapp/gunicorn.log /opt/graphite/webapp/graphite/settings.py
process_name=%(program_name)s
autostart=true
autorestart=true
stopsignal=QUIT
user={{ nginx_user }}
 
{% for instance in cache_instances %}
[program:carbon-cache-{{instance.id}}]
command=/opt/graphite/bin/python /opt/graphite/bin/carbon-cache.py --instance={{instance.id}} --nodaemon start
process_name=%(program_name)s
autostart=true
autorestart=true
stopsignal=QUIT
{% endfor %}

[program:carbon-relay]
command=/opt/graphite/bin/python /opt/graphite/bin/carbon-relay.py --nodaemon start
process_name=%(program_name)s
autostart=true
autorestart=true
stopsignal=QUIT
