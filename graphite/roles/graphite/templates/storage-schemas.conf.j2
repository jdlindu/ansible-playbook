# Schema definitions for Whisper files. Entries are scanned in order,
# and first match wins. This file is scanned for changes every 60 seconds.
#
#  [name]
#  pattern = regex
#  retentions = timePerPoint:timeToStore, timePerPoint:timeToStore, ...

# Carbon's internal metrics. This entry should match what is specified in
# CARBON_METRIC_PREFIX and CARBON_METRIC_INTERVAL settings
[carbon]
pattern = ^carbon\.
retentions = 60:90d

[predefined_in_key_10s]
pattern = .*\.precision\>10s.*
retentions = 10s:1d,1min:7d,10min:1y

[predefined_in_key_1min]
pattern = .*\.precision\>1min.*
retentions = 1min:1d,5min:7d,10min:1y

[predefined_in_key_5min]
pattern = .*\.precision\>5min.*
retentions = 5min:60d,10min:180d,20min:1y

[predefined_in_key_10min]
pattern = .*\.precision\>10min.*
retentions = 10min:180d,20min:1y

[predefined_in_key_15min]
pattern = .*\.precision\>10min.*
retentions = 15min:1y

[deprecate_proc_pattern]
pattern = ^sysop.proc_flow.*
retentions = 5min:60d,10min:180d,20min:1y

[statsd]
pattern = ^stats.*
retentions = 10s:6h,1min:7d,10min:5y

[default_1min_for_90day]
pattern = .*
retentions = 60s:30d,5min:180d,15min:1y
